{
    "name": "GTD Trello",
    "description": "Get Things Done with Trello!",
    "version": "0.1",
    "manifest_version": 2,
    "icons": {
        "128": "images/icon.png"
    },
    "content_scripts": [{
        "matches": ["*://trello.com/*"],
        "js": ["lib/jquery.min.js", "js/gtd-trello.js"],
        "css": ["css/gtd-trello.css"],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "*://trello.com/*", "tabs", "webNavigation"
    ]
}
